<p id="notice"><%= notice %></p>
<div class="top-container">
    <h1>Proyectos</h1>
    <div class="actions">
      <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Men√∫
        </button>
        <div class="dropdown-menu dropdown-menu-right">
          <%= link_to 'Crear Proyecto', new_proyecto_path, :class => "dropdown-item" %>
          <div class="dropdown-divider"></div>
        </div>
      </div>
    </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Fecha inicio</th>
      <th>Fecha fin</th>
      <th>Facultad</th>
      <th>Programa</th>
      <th>Grupo</th>
      <th>Semillero</th>
      <th>Investigador</th>
      <th>Numero proyecto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proyectos.each do |proyecto| %>
      <tr>
        <td><%= proyecto.nombre %></td>
        <td><%= proyecto.fecha_inicio %></td>
        <td><%= proyecto.fecha_fin %></td>
        <td><%= proyecto&.facultad&.nombre %></td>
        <td><%= proyecto&.programa&.nombre %></td>
        <td><%= proyecto&.grupo&.nombre %></td>
        <td><%= proyecto&.semillero&.nombre %></td>
        <td><%= proyecto&.investigador&.nombre_completo %></td>
        <td><%= proyecto.numero_proyecto %></td>
        <td><%= link_to 'Ver', proyecto, :class => "badge badge-info" %></td>
        <td><%= link_to 'Editar', edit_proyecto_path(proyecto), :class => "badge badge-secondary" %></td>
        <td><%= link_to 'Borrar', proyecto, method: :delete, data: { confirm: 'Are you sure?' }, :class => "badge badge-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
