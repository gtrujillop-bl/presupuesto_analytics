<div class="reports">

<% if @reports.present? %>
  <p id="notice"><%= notice %></p>
  <h1>Reporte de Presupuestos a√±o</h1>
  
  <%= form_with url: presupuestos_path, method: :get do |form| %>
    <% option = params[:reporte] %>
    <%= form.label :query, "Filtrar" %>
    <%= form.hidden_field :reporte, value: option %>
    <%= form.select :by, ["2021", "2020", "2019", "2018"] %>
    <%= form.submit "Filtrar" %>
  <% end %>
  

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Rubro</th>
        <th>Proyecto</th>
        <th>Descripcion</th>
        <th>Valor inicial</th>
        <th>Disponibilidad</th>
        <th>Egreso</th>
        <th>Reserva</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @reports.each do |presupuesto| %>
        <tr>
          <td><%= presupuesto.rubro_id %></td>
          <td><%= presupuesto.proyecto_id %></td>
          <td><%= presupuesto.descripcion %></td>
          <td><%= Money.from_amount(presupuesto.valor_inicial, 'COP').format %></td>
          <td><%= Money.from_amount(presupuesto.disponibilidad, 'COP').format %></td>
          <td><%= Money.from_amount(presupuesto.egreso, 'COP').format %></td>
          <td><%= Money.from_amount(presupuesto.reserva, 'COP').format %></td>
          <td><%= link_to 'Ver', presupuesto %></td>
          <td><%= link_to 'Editar', edit_presupuesto_path(presupuesto) %></td>
          <td><%= link_to 'Borrar', presupuesto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Registrar Presupuesto', new_presupuesto_path %>
<% end %>
</div>