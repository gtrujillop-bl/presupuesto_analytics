<p id="notice"><%= notice %></p>
<div class="top-container">
    <h1>Programas</h1>
    <div class="actions">
      <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Men√∫
        </button>
        <div class="dropdown-menu dropdown-menu-right">
          <%= link_to 'Crear Programa', new_programa_path, :class => "dropdown-item" %>
          <div class="dropdown-divider"></div>
        </div>
      </div>
    </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Facultad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programas.each do |programa| %>
      <tr>
        <td><%= programa.nombre %></td>
        <td><%= programa.facultad.nombre %></td>
        <td><%= link_to 'Ver', programa, :class => "badge badge-info" %></td>
        <td><%= link_to 'Editar', edit_programa_path(programa), :class => "badge badge-secondary"  %></td>
        <td><%= link_to 'Borrar', programa, method: :delete, data: { confirm: 'Are you sure?' }, :class => "badge badge-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
