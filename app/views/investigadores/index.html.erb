<p id="notice"><%= notice %></p>

<h1>Investigadores</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Cedula</th>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @investigadores.each do |investigador| %>
      <tr>
        <td><%= investigador.cedula %></td>
        <td><%= investigador.nombres %></td>
        <td><%= investigador.apellidos %></td>
        <td><%= link_to 'Ver', investigadore_path(investigador) %></td>
        <td><%= link_to 'Editar', edit_investigadore_path(investigador) %></td>
        <td><%= link_to 'Borrar', investigadore_path(investigador), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

