<p id="notice"><%= notice %></p>

<h1>Presupuesto Inicial Proyectos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Rubro</th>
      <th>Proyecto</th>
      <th>Descripcion</th>
      <th>Valor inicial</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @presupuesto_inicial_proyectos.each do |presupuesto_inicial_proyecto| %>
      <tr>
        <td><%= presupuesto_inicial_proyecto.rubro_id %></td>
        <td><%= presupuesto_inicial_proyecto.proyecto_id %></td>
        <td><%= presupuesto_inicial_proyecto.descripcion %></td>
        <td class="pr-money"><%= Money.from_amount(presupuesto_inicial_proyecto.valor_inicial, 'COP').format %></td>
        <td><%= link_to 'Ver', presupuesto_inicial_proyecto %></td>
        <td><%= link_to 'Editar', edit_presupuesto_inicial_proyecto_path(presupuesto_inicial_proyecto) %></td>
        <td><%= link_to 'Borrar', presupuesto_inicial_proyecto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td>Totales</td>
      <td><%= Money.from_amount(@total_valor_inicial, 'COP').format %></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </tbody>
</table>
<%== pagy_bootstrap_nav(@pagy) %>
