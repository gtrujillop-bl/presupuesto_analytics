<div class="block-form-content">
  <%= form_with(model: grupo) do |form| %>
    <% if grupo.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(grupo.errors.count, "error") %> prohibited this grupo from being saved:</h2>

        <ul>
          <% grupo.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :nombre %>
      <%= form.text_field :nombre %>
    </div>

    <div class="field">
      <%= form.label :facultad_id %>
      <%= form.collection_select :facultad_id, facultades, :id, :nombre %>
    </div>

    <div class="field">
      <%= form.label :programa_id %>
      <%= form.collection_select :programa_id, programas, :id, :nombre %>
    </div>

    <div class="actions">
      <%= link_to 'Volver', grupos_path %> <%= form.submit "Guardar" %>
    </div>
  <% end %>
</div>
