<p id="notice"><%= notice %></p>

<h1>Rubros</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rubros.each do |rubro| %>
      <tr>
        <td><%= rubro.nombre %></td>
        <td><%= rubro.descripcion %></td>
        <td><%= link_to 'Ver', rubro %></td>
        <td><%= link_to 'Editar', edit_rubro_path(rubro) %></td>
        <td><%= link_to 'Borrar', rubro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rubro', new_rubro_path %>
