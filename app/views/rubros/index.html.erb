<p id="notice"><%= notice %></p>
<div class="top-container">
    <h1>Rubros</h1>
    <div class="actions">
      <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Men√∫
        </button>
        <div class="dropdown-menu dropdown-menu-right">
          <%= link_to 'Crear Rubro', new_rubro_path, :class => "dropdown-item" %>
          <div class="dropdown-divider"></div>
        </div>
      </div>
    </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rubros.each do |rubro| %>
      <tr>
        <td><%= rubro.nombre %></td>
        <td><%= rubro.descripcion %></td>
        <td><%= link_to 'Ver', rubro, :class => "badge badge-info" %></td>
        <td><%= link_to 'Editar', edit_rubro_path(rubro), :class => "badge badge-secondary" %></td>
        <td><%= link_to 'Borrar', rubro, method: :delete, data: { confirm: 'Are you sure?' }, :class => "badge badge-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

