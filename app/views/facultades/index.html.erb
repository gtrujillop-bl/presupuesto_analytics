<p id="notice"><%= notice %></p>

<h1>Facultades</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facultades.each do |facultad| %>
      <tr>
        <td><%= facultad.nombre %></td>
        <td><%= link_to 'Ver', facultade_path(facultad) %></td>
        <td><%= link_to 'Editar', edit_facultade_path(facultad) %></td>
        <td><%= link_to 'Borrar', facultade_path(facultad), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Facultad', new_facultade_path %>
